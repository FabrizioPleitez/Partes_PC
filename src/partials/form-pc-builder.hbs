<section id="{{formPcBuilder.id}}" class="section section-dark form-section">
  <div class="container form-grid">
    <div class="form-text">
      <h2 class="section-title section-title-light">
        {{formPcBuilder.title}}
      </h2>
      <p class="section-description section-description-light">
        {{formPcBuilder.description}}
      </p>

      <ul class="form-benefits">
        {{#each formPcBuilder.benefits}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="form-card">
      <div class="form-image-wrapper">
        <img
          src="{{formPcBuilder.sideImage.src}}"
          alt="{{formPcBuilder.sideImage.alt}}"
          class="form-image"
        />
      </div>

      <form class="pc-builder-form">
        {{#each formPcBuilder.fields}}
          <div class="form-group {{#if fullWidth}}form-group-full{{/if}}">
            <label for="{{name}}">{{label}}</label>

            {{#if isSelect}}
              <select
                id="{{name}}"
                name="{{name}}"
                {{#if required}}required{{/if}}
              >
                <option value="">{{placeholder}}</option>
                {{#each options}}
                  <option value="{{value}}">{{label}}</option>
                {{/each}}
              </select>
            {{else}}
              {{#if isTextarea}}
                <textarea
                  id="{{name}}"
                  name="{{name}}"
                  rows="{{rows}}"
                  placeholder="{{placeholder}}"
                  {{#if required}}required{{/if}}
                ></textarea>
              {{else}}
                <input
                  type="{{type}}"
                  id="{{name}}"
                  name="{{name}}"
                  placeholder="{{placeholder}}"
                  {{#if required}}required{{/if}}
                />
              {{/if}}
            {{/if}}
          </div>
        {{/each}}

        <button type="submit" class="btn btn-primary btn-full">
          {{formPcBuilder.submitText}}
        </button>
        <p class="form-note">{{formPcBuilder.note}}</p>
      </form>
    </div>
  </div>
</section>
